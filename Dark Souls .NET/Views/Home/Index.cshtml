    <form action="About">
        <h2>Fighters</h2>
        @foreach (var f in ViewBag.fighters)
        {
            <p>@f.NAME<input name="Fid" type="radio" value="@f.ID" /></p>

        }
        <br /><br />
        <h2>Monsters</h2>
        @foreach (var m in ViewBag.monsters)
        {
            <p>@m.NAME<input name="Mid" type="radio" value="@m.ID" /></p>
        }
        <button type="submit" onclick="About">Fight!</button>
    </form>

</body>


